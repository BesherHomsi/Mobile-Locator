<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:timePickerMode="spinner" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timePicker"
                android:layout_marginLeft="20dp"
                android:hint="Title"/>

            <EditText
                android:inputType="none"
                android:textIsSelectable="true"
                android:id="@+id/btn_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_title"
                android:layout_marginLeft="20dp"
                android:hint="Choose day"
                android:clickable="true"/>

            <EditText
                android:inputType="none"
                android:textIsSelectable="true"
                android:id="@+id/et_setStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_days"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:hint="Start Date" />

            <EditText
                android:inputType="none"
                android:textIsSelectable="true"
                android:id="@+id/et_setEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_setStartDate"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:hint="End Date" />

            <Button
                android:id="@+id/btn_AddEvent"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:text="Add Event"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_below="@+id/et_setEndDate"
                android:layout_centerHorizontal="true"  />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
